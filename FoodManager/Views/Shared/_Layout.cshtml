<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
    @if(!String.IsNullOrWhiteSpace(ViewBag.Title)){
        @Html.Raw(string.Concat(ViewBag.Title, " - "));
    } FoodManager
    </title>
    
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/ui-bootstrap-csp.css")
    @Scripts.Render("~/Scripts/date.js")
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
    @Scripts.Render("~/Scripts/jquery.validate.js")
    @Scripts.Render("~/Scripts/bootstrap.js")
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/angular-animate.js")
    @Scripts.Render("~/Scripts/angular-sanitize.js")
    @Scripts.Render("~/Scripts/angular-route.js")
    @Scripts.Render("~/Scripts/i18n/angular-locale_ru.js")
    @Scripts.Render("~/Scripts/angular-ui/ui-bootstrap.js")
    @Scripts.Render("~/Scripts/angular-ui/ui-bootstrap-tpls.js")
    @Scripts.Render("~/Scripts/app/app.js")
    @Scripts.Render("~/Scripts/app/controllers/fridgeCtrl.js")
    @Scripts.Render("~/Scripts/app/controllers/shoppingListsCtrl.js")
    @Scripts.Render("~/Scripts/app/controllers/recipesCtrl.js")
    @Scripts.Render("~/Scripts/app/controllers/fridgeCtrl.js")
    @Scripts.Render("~/Scripts/app/controllers/modalInstanseCtrl.js")

    @RenderSection("scripts", required: false)
</head>
<body ng-app="FoodManagerApp">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("FoodManager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <ul class="nav navbar-nav">
                <li><a href="#!/fridge">Холодильник</a></li>
                <li><a href="#!/shoppingLists">Списки покупок</a></li>
                <li><a href="#!/recipes">Рецепты</a></li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FoodManager</p>
        </footer>
    </div>
</body>
</html>